<UserControl x:Class="BoilerPlate.View.LogAreaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ignore="http://www.ignore.com"
             mc:Ignorable="d ignore"
             
             Height="{Binding LogAreaHeight, Mode=TwoWay}"
             Width="{Binding LogAreaWidth, Mode=TwoWay}"
             DataContext="{Binding LogAreaVM, Source={StaticResource Locator}}">

    <Grid Background="#FFE5E5E5">
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding LogAreaHeight}" />
        </Grid.RowDefinitions>
   
    </Grid>
</UserControl>
